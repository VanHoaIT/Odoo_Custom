<?xml version="1.0" encoding="utf-8"?>
<templates>
    <div t-name="sale_order_checkout.DashboardAction" class="o_action o_spreadsheet_dashboard_action o_field_highlight">
        <div class="o_sale_dashboard_layout d-flex">
            <div class="o_select_month">
                <label for="month_select">Select month: </label>
                <select t-on-change="onMonthChange">
                    <t t-foreach="state.months" t-as="month" t-key="month.value">
                        <option t-att-value="month.value" t-esc="month.name" t-att-selected="month.value === state.selectedMonth"/>
                    </t>
                </select>
            </div>
        </div> 
        <div class="o_sale_dashboard_layout d-flex">
            <div class="o_sale_dashboard_column_left d-flex justify-content-between">

                <div class="o_sale_dashboard_metric d-flex justify-content-between">
                    <div>
                        <TotalSales
                            currentMonthSales="state.activeDashboard['number_sale_current_month']"
                            previousMonthSales="state.activeDashboard['number_sale_previous_month']"
                            growthPercentage="state.activeDashboard['growth_percentage_number_sale']"
                        />
                    </div>
                    <div class="o_metric_icon">
                        <img src="/sale_order_checkout/static/src/img/total-sale.png" alt="icon"/>
                    </div>
                </div>

                <div class="o_sale_dashboard_metric d-flex justify-content-between">
                    <div>                        
                        <Revenue
                            currentMonthSales="state.activeDashboard['total_sale_current_month']"
                            previousMonthSales="state.activeDashboard['total_sale_previous_month']"
                            growthPercentage="state.activeDashboard['growth_percentage_total_sale']"
                        />
                    </div>
                    <div class="o_metric_icon">
                        <img src="/sale_order_checkout/static/src/img/user.svg" alt="icon"/>
                    </div>
                </div>

                <div class="o_sale_dashboard_metric d-flex justify-content-between">
                    <div>
                        <AverageOrderValue
                            currentMonthSales="state.activeDashboard['average_order_sale_current_month']"
                            previousMonthSales="state.activeDashboard['average_order_sale_previous_month']"
                            growthPercentage="state.activeDashboard['growth_percentage_average_order_sale']"
                        />
                    </div>
                    <div class="o_metric_icon">
                        <img src="/sale_order_checkout/static/src/img/sale.svg" alt="icon"/>
                    </div>
                </div>

                <div class="o_sale_dashboard_metric d-flex justify-content-between">
                    <div>
                        <TotalOrder
                            currentMonthSales="state.activeDashboard['total_order_current_month']"
                            previousMonthSales="state.activeDashboard['total_order_previous_month']"
                            growthPercentage="state.activeDashboard['growth_percentage_total_order']"
                        />
                    </div>
                    <div class="o_metric_icon">
                        <img src="/sale_order_checkout/static/src/img/block.svg" alt="icon"/>
                    </div>
                </div>

            </div>

        </div>
    </div>
</templates>
